#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
PROG="install_rvm"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 031520211551-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : install_rvm --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Monday, Mar 15, 2021 15:51 EDT
# @File          : install_rvm
# @Description   : Ruby Version Manager installer
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function file
if [ -f "$SRC_DIR/functions.bash" ]; then
  FUNCTIONS_DIR="$SRC_DIR"
  . "$FUNCTIONS_DIR/functions.bash"
elif [ -f "$HOME/.local/bin/functions.bash" ]; then
  FUNCTIONS_DIR="$HOME/.local/bin"
  . "$FUNCTIONS_DIR/functions.bash"
else
  printf "\t\t\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $FUNCTIONS_DIR"
  return 1
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# helper function
__version() { app_version; }
__help() {
  app_help "Usage: install_rvm  -  install_rvm --version"  \
    "-v, --version          -  display version" \
    "-h, --help             -  display help"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # options
  case $1 in
    -v | --version) __version ;;
    -h | --help) __help ;;
  esac
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Required app check
  cmd_exists --error bash curl git || exit 1
  am_i_online --error || exit 1
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # begin main app
  local RVMPATH="$HOME/.local/share/rvm"
  local PATH="$RVMPATH/bin:$PATH"
  local gpg_keys="409B6B1796C275462A1703113804BB82D39DC0E3 7D2BAF1CF37B13E2069D6956105BD0E739499BDB"
  local install_script="https://raw.githubusercontent.com/rvm/rvm/master/binscripts/rvm-installer"
  local install_cmd="/tmp/rvm_install master --version latest --path $RVMPATH/scripts/rvm --ignore-dotfiles --ruby --rails"
  export PATH RVMPATH
  [[ -d "$RVMPATH/.git" ]] || rm -Rf "$RVMPATH" &>/dev/null
  [[ -f "$RVMPATH/scripts/rvm" ]] && source "$RVMPATH/scripts/rvm"
  if [ -n "$(command -v rvm)" ]; then
    printf_green "RVM is already installed"
  else
    printf_green "installing RVM!"
    gpg --keyserver hkp://pool.sks-keyservers.net --recv-keys $gpg_keys &>/dev/null || printf_exit "Failed to retrieve gpg keys" >&2
    curl -q -LSs "$install_script" >/tmp/rvm_install || printf_exit "Failed to download the script" >&2
    chmod 755 /tmp/rvm_install && bash -c "$install_cmd &>/dev/null" || printf_exit "Failed to install RVM"
    [[ -f "$RVMPATH/scripts/rvm" ]] && source "$RVMPATH/scripts/rvm" &&
    devnull rvm autolibs enable &&
    devnull rvm install "ruby-2.7.1" --auto-dotfiles &&
    devnull rvm use "ruby-2.7.1" --default --create &&
    printf_green "Finished installing RVM!" || printf_exit "Installation of RVM has failed" >&2
  fi
  return "${exitCode:-$?}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end

