#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
PROG="install_rvm"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts
trap 'exitCode=${exitCode:-$?};[[ -d "$HOME/tmp/rvm_install" ]] && rm -Rf "$HOME/tmp/rvm_install" &>/dev/null' EXIT

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 031520211551-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : install_rvm --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Monday, Mar 15, 2021 15:51 EDT
# @File          : install_rvm
# @Description   : Ruby Version Manager installer
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function file
if [ -f "$SRC_DIR/functions.bash" ]; then
  FUNCTIONS_DIR="$SRC_DIR"
  . "$FUNCTIONS_DIR/functions.bash"
elif [ -f "$HOME/.local/bin/functions.bash" ]; then
  FUNCTIONS_DIR="$HOME/.local/bin"
  . "$FUNCTIONS_DIR/functions.bash"
else
  printf "\t\t\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $FUNCTIONS_DIR"
  return 1
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# helper function
__version() { app_version; }
__help() {
  app_help "Usage: install_rvm  -  install_rvm --version" \
    "-v, --version          -  display version" \
    "-h, --help             -  display help"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # options
  case $1 in
  -v | --version) __version ;;
  -h | --help) __help ;;
  -s | --set) rmv_version="$2" && shift 2 ;;
  esac
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Required app check
  cmd_exists --error bash curl git || exit 1
  am_i_online --error || exit 1
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # begin main app
  local rvm_path="$HOME/.local/share/rvm"
  local RVMPATH="$rvm_path"
  local PATH="$RVMPATH/bin:$PATH"
  local GITREPO="https://github.com/rvm/rvm"
  local version="${rmv_version:-2.7.4}"
  export PATH RVMPATH rvm_path
  printf_blue "Initializing RVM Setup"
  [[ -d "$HOME/tmp/rvm_install" ]] && rm -Rf "$HOME/tmp/rvm_install" &>/dev/null
  [[ -d "$RVMPATH/.git" ]] || rm -Rf "$RVMPATH" &>/dev/null
  [[ -f "$RVMPATH/scripts/rvm" ]] && source "$RVMPATH/scripts/rvm"
  printf_green "Downloading RVM from $GITREPO"
  if git clone "$GITREPO" -q "$HOME/tmp/rvm_install" &>/dev/null; then
    printf_blue "Downloaded RVM from $GITREPO"
  else
    printf_exit "Failed to download the repo" >&2
  fi
  printf_green "Installing RVM to $RVMPATH"
  cd "$HOME/tmp/rvm_install" && bash -c "$HOME/tmp/rvm_install/install" &>/dev/null
  [[ -f "$RVMPATH/scripts/rvm" ]] && source "$RVMPATH/scripts/rvm" &&
    printf_green "Installing RVM ruby $version" &&
    rvm autolibs enable &>/dev/null &&
    rvm install "ruby-$version" --auto-dotfiles &>/dev/null &&
    rvm use "ruby-$version" --default --create &>/dev/null &&
    printf_green "Finished installing RVM!" || printf_exit "Installation of RVM has failed" >&2
  return "${exitCode:-$?}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
