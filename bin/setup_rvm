#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"
export PATH="/usr/local/rvm/bin:$PATH"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : install_rvm
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Ruby Version Manager installer
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-applications.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$HOME/.local/share/CasjaysDev/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$HOME/.local/share/CasjaysDev/functions/$SCRIPTSFUNCTFILE"
else
  curl -LSs "$SCRIPTSFUNCTURL/$SCRIPTSFUNCTFILE" -o "/tmp/$SCRIPTSFUNCTFILE" || exit 1
  . "/tmp/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

[ "$1" = "--version" ] && get_app_info "$APPNAME"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set options

[[ -f "/usr/local/share/rvm/scripts/rvm" ]] && source /usr/local/share/rvm/scripts/rvm
[[ -f "$HOME/.local/share/rvm/scripts/rvm" ]] && source "$HOME/.local/share/rvm/scripts/rvm"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# main program

if [ -n "$(command -v rvm)" ]; then
  printf_green "RVM is already installed"
else
  printf_green "installing RVM!"
   if [ "$1" = "--system" ]; then
     if [[ "$USER" != root ]]; then printf_red "Please re-run this script with sudo"; exit ; fi
     sudo -H gpg --keyserver hkp://pool.sks-keyservers.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3 7D2BAF1CF37B13E2069D6956105BD0E739499BDB >/dev/null 2>&1 &&
     sudo -H curl -LSsq https://raw.githubusercontent.com/rvm/rvm/master/binscripts/rvm-installer > /tmp/rvm_install && 
     sudo -H chmod 755 /tmp/rvm_install &&
     sudo -H bash /tmp/rvm_install master --version latest --path /usr/local/share/rvm --ignore-dotfiles --ruby --rails >/dev/null 2>&1 &&
     [[ -f /usr/local/share/rvm/scripts/rvm ]] && sudo -H -s source /usr/local/share/rvm/scripts/rvm &&
     sudo -H rm -Rf /tmp/rvm_install &&
       devnull sudo -H rvm autolibs enable &&
       devnull sudo -H rvm install "ruby-2.7.1" --auto-dotfiles &&
       devnull sudo -H rvm use "ruby-2.7.1" --default --create && 
       printf_green "Finished installing RVM!" || printf_exit "Installation failed"
   else 
     gpg --keyserver hkp://pool.sks-keyservers.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3 7D2BAF1CF37B13E2069D6956105BD0E739499BDB >/dev/null 2>&1 &&
     curl -LSsq https://raw.githubusercontent.com/rvm/rvm/master/binscripts/rvm-installer > /tmp/rvm_install && 
     chmod 755 /tmp/rvm_install &&
     bash /tmp/rvm_install master --version latest --path "$HOME/.local/share/rvm/scripts/rvm" --ignore-dotfiles --ruby --rails >/dev/null 2>&1 &&
     [[ -f "$HOME/.local/share/rvm/scripts/rvm" ]] && source "$HOME/.local/share/rvm/scripts/rvm" &&
       devnull rvm autolibs enable &&
       devnull rvm install "ruby-2.7.1" --auto-dotfiles &&
       devnull rvm use "ruby-2.7.1" --default --create &&
       printf_green "Finished installing RVM!" || printf_exit "Installation failed"
   fi
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# end
